@using FlightsBookingWeb.Models
@model FlightListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Choose your flight</h1>
    
    @foreach (var flight in Model.Flights)
    {
        <div>
            @Html.ActionLink(flight.Number, "GetFlight", new { flightId = flight.Id })
            Departure: @flight.Date
        </div>
    }
</div>